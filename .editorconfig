# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = 'single'

[*.{yml,yaml}]
indent_size = 2

[*.{md,markdown}]
indent_size = 1
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 8
